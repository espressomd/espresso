reset
set terminal postscript portrait size 12.0cm,8.0cm enhanced color dashed lw 1 "Helvetica" 10
set output "rdf.eps"
set encoding iso
set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset title                            # remove title
unset xlabel                           # remove xlabel
unset ylabel                           # remove ylabel
unset key                              # remove any key position
unset label                            # remove any previous labels
set ytics auto                         # set ytics automatically
unset format                           # remove format
set xtics auto                         # set xtics automatically
set xlabel "r"
set ylabel "reduced units"
set xr [0.9:3.25]
set yr [0.0:4.5]
set key top right
plot  "rdf_01.dat" using 1:2 title "g_{-+}(r)" with line lt 1 lw 2 lc rgb "red", \
      "rdf_11.dat" using 1:2 title "g_{++}(r)" with line lt 1 lw 2 lc rgb "blue", \
      "rdf.dat" using 1:2 title "g_{WCA}(r)" with line lt 1 lw 2 lc rgb "black"
set output
